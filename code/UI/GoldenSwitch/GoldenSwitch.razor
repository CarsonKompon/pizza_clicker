
@using Sandbox;
@using Sandbox.UI;
@using Sandbox.UI.Construct;
@using Sandbox.Menu;
@using System;
@using System.Collections.Generic;
@using System.Linq;
@attribute [StyleSheet]

@namespace PizzaClicker

<root onclick=@Pressed class="@GetClasses()" >

</root>

@code
{
    public static bool Enabled = false;
   
    public void Pressed()
    {
        Enabled = !Enabled;

        var player = GameMenu.Instance.LocalPlayer;
        player.GoldTimer = new Random().Float(player.GoldMinTime, player.GoldMaxTime);
    }

    string GetClasses()
    {
        return Enabled ? "on" : "off";
    }

    protected override int BuildHash()
    {
        return HashCode.Combine(Enabled);
    }

}