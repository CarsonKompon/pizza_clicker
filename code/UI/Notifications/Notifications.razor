@using Sandbox.UI;

@attribute [StyleSheet]

@namespace PizzaClicker

<root>

</root>

@code
{
    public static Notifications Instance;

    protected override void OnAfterTreeRender(bool firstTime)
    {
        base.OnAfterTreeRender(firstTime);

        Instance = this;
    }

    public static void Popup(string header, string text, string styles = "", string icon = null, float duration = 8f)
    {
        Popup popup = new() {
            Header = header,
            Text = text,
            Icon = icon,
            Duration = duration,
        };

        popup.AddClass(styles);

        Instance.AddChild(popup);
    }
}
