@using Sandbox;
@using Sandbox.UI;
@using Sandbox.UI.Construct;
@using Sandbox.Menu;
@using System;
@using System.Collections.Generic;
@using System.Linq;
@attribute [StyleSheet]

@namespace PizzaClicker

<root>

</root>

@code
{
    public static Notifications Instance;

    protected override void OnAfterTreeRender(bool firstTime)
    {
        base.OnAfterTreeRender(firstTime);

        Instance = this;
    }

    public static void Popup(string header, string text, string styles = "", string icon = null)
    {
        var popup = new Popup();
        popup.AddClass(styles);
        popup.Header = header;
        popup.Text = text;
        popup.Icon = icon;
        Instance.AddChild(popup);
    }

    public override void Tick()
    {
        if(Input.Pressed("jump"))
        {
            Popup("Achievement Unlocked!", "Just getting started", "achievement", "ui/icons/trophy.png");
        }
    }

}